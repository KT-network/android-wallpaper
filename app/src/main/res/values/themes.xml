<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.简壁纸" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/LightTopBackgroung</item>
        <item name="colorPrimaryDark">@color/LightBottomBackgroung</item>
<!--        <item name="colorAccent">@color/blue</item>-->

        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/LightBottomBackgroung</item>
    </style>


    <style name="textColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#00f</item>
    </style>

    <!-- 设置Toolbar标题字体的颜色大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item><!--toolbar标题字体大小-->
        <item name="android:textColor">@color/LightTextMajorColour</item><!--toolbar标题字体颜色-->
        <item name="android:textStyle">bold</item>

    </style>

    <!-- 设置Toolbar 子标题subtitle标题字体的大小 -->
    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">10sp</item><!--子标题字体大小-->
        <item name="android:textColor">@color/LightTextMinorColour</item><!--子标题字体颜色-->
    </style>


    <style name="testText" parent="TextAppearance.AppCompat">
        <item name="color">@color/LightTextMajorColour</item>
    </style>
    

</resources>